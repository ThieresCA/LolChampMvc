@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<LolChampMvc.Models.Datum>

@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
</head>

<h1>Champions</h1>
<form id="FormId" asp-controller="Personagens" asp-action="Details" method="get">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Champion" aria-describedby="basic-addon2" id="Teste" name="id">
        <button type="submit" class="input-group-addon btn btn-primary n-bord" id="basic-addon2">Search</button>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Name
            </th>
            <th>
                Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="splash">
                    <div class="img-m">
                        <object class="image img-fluid px" data="@String.Format("http://ddragon.leagueoflegends.com/cdn/13.1.1/img/champion/{0}.png", item.Id)" width="200" height="200"></object>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td id="title" class="first">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id=item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="page-item">
    @Html.PagedListPager(Model, page => Url.Action("Index", new{ page}))
</div>


<script src="~/js/site.js"></script>
